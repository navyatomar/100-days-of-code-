Code=59
#include <stdio.h>
int main() {
    int n;
    scanf("%d", &n); // Read size of array
    int arr[n];
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]); // Read array elements
    }
    int even = 0, odd = 0;
    for(int i = 0; i < n; i++) {
        if(arr[i] % 2 == 0)
            even++;
        else
            odd++;
    }
    printf("Even=%d, Odd=%d\n", even, odd);
    return 0;
}
code=60
#include <stdio.h>
int main() {
    int n;
    scanf("%d", &n); // Read size of array
    int arr[n];
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]); 
    }
    int positive = 0, negative = 0, zero = 0;
    for(int i = 0; i < n; i++) {
        if(arr[i] > 0)
            positive++;
        else if(arr[i] < 0)
            negative++;
        else
            zero++;
    }
    printf("Positive=%d, Negative=%d, Zero=%d\n", positive, negative, zero);
    return 0;
}
