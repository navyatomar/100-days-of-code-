#include <stdio.h>

int main() {
    char filename[100];
    char text[200];
    FILE *fp;
    printf("Enter filename: ");
    scanf("%s", filename);
    fp = fopen(filename, "a");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }
    getchar(); // to consume leftover newline
    printf("Enter text to append: ");
    fgets(text, sizeof(text), stdin);
    fprintf(fp, "%s", text);

    fclose(fp);

    printf("File updated successfully with appended text.\n");

    return 0;
}
