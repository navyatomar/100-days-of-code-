Q=49,50
#include <stdio.h>
int main() {
    int n, i, j;
    scanf("%d", &n);  // Input number
    for(i = n; i >= 1; i--) {        
        for(j = i; j <= n; j++) {    
            printf("%d", j);
        }
        printf("\n");            
    }
    return 0;
}
#include <stdio.h>
int main() {
    int n, i, j, space;
    scanf("%d", &n);  // Input number of rows
    for(i = n; i >= 1; i--) {           // Outer loop for rows
        for(space = 0; space < n - i; space++) {  
            printf(" ");                // Print leading spaces
        }
        for(j = 1; j <= i; j++) {       
            printf("*");                // Print stars
        }
        printf("\n");                   // Move to next line
    }
    return 0;
}

