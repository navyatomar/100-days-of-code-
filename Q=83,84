Code=83
#include <stdio.h>
int main() {
    char str[100];
    scanf("%s", str);
    int vowels = 0, consonants = 0;
    for(int i = 0; str[i] != '\0'; i++) {
        char ch = tolower(str[i]); 
        if((ch >= 'a' && ch <= 'z')) { 
            if(ch=='a' || ch=='e' || ch=='i' || ch=='o' || ch=='u')
                vowels++;
            else
                consonants++;
        }
    }
    printf("Vowels=%d, Consonants=%d\n", vowels, consonants);
    return 0;
}
code=84
#include <stdio.h>
int main() {
    char str[100];
    scanf("%s", str); 
    for(int i = 0; str[i] != '\0'; i++) {
        if(str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - ('a' - 'A'); 
        }}
    printf("%s\n", str);
    return 0;
}
