#include <stdio.h>
#include <ctype.h>
#include <string.h>
int main() {
    char str[] = "i am trying to build logic.";
    int n = strlen(str);

    int capitalizeNext = 1; // capitalize the first character

    for (int i = 0; i < n; i++) {
        if (isspace(str[i])) {
            capitalizeNext = 1;
        } else if (capitalizeNext) {
            str[i] = toupper(str[i]);
            capitalizeNext = 0;
        } else {
            str[i] = tolower(str[i]);
        }
    }

    printf("%s\n", str);

    return 0;
}
