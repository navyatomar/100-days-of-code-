#include <stdio.h>
#include <math.h>

int main() {
    int num, first, last, digits, swapped;
    
    // Input number
    scanf("%d", &num);
    
    // If number is single-digit, no swap needed
    if (num < 10) {
        printf("%d\n", num);
        return 0;
    }

    last = num % 10;  // Get last digit
    digits = (int)log10(num);  // Count of digits - 1
    first = num / (int)pow(10, digits);  // Get first digit
    swapped = last * (int)pow(10, digits) + (num % (int)pow(10, digits)) / 10 * 10 + first;

    printf("%d\n", swapped);

    return 0;
}
code42
#include <stdio.h>

int main() {
    int n, sum = 0;
    scanf("%d", &n);

    for (int i = 1; i <= n/2; i++) {
        if (n % i == 0)
            sum += i;
    }

    if (sum == n)
        printf("Perfect number");
    else
        printf("Not perfect number");

    return 0;
}

