#include <stdio.h>

int pivotInteger(int n) {
    int total = n * (n + 1) / 2;

    for (int x = 1; x <= n; x++) {
        int leftSum = x * (x + 1) / 2;
        int rightSum = total - (x - 1) * x / 2;

        if (leftSum == rightSum)
            return x;
    }

    return -1;
}

int main() {
    int n;
    scanf("%d", &n);

    printf("%d\n", pivotInteger(n));

    return 0;
}
