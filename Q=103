#include <stdio.h>

int pivotIndex(int nums[], int n) {
    int total = 0;
    for (int i = 0; i < n; i++)
        total += nums[i];

    int leftSum = 0;

    for (int i = 0; i < n; i++) {
        int rightSum = total - leftSum - nums[i];

        if (leftSum == rightSum)
            return i;

        leftSum += nums[i];
    }

    return -1;
}

int main() {
    int nums[] = {1, 7, 3, 6, 5, 6};
    int n = sizeof(nums) / sizeof(nums[0]);

    int index = pivotIndex(nums, n);

    printf("%d\n", index);

    return 0;
}
