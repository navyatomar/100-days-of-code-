Q=51,52
#include <stdio.h>
int main() {
    int n, i, j, space;
    scanf("%d", &n);  // Input number of rows
    for(i = n; i >= 1; i--) {           // Outer loop for rows
        for(space = 0; space < n - i; space++) {  
            printf(" ");                // Print leading spaces
        }
        for(j = 1; j <= i; j++) {       
            printf("*");                // Print stars
        }
        printf("\n");                   // Move to next line
    }
    return 0;
}Q=52
#include <stdio.h>
int main() {
    int i, j;
    printf("*\n\n");
    for(i = 1; i <= 3; i++) {
        printf("*\n");
    }
    printf("\n");
    for(i = 1; i <= 5; i++) {
        printf("*\n");
    }
    printf("\n");
    for(i = 1; i <= 3; i++) {
        printf("*\n");
    }
    printf("\n");
    printf("*\n");
    return 0;
}

