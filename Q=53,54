#include <stdio.h>
int main() {
    int n = 5; // Number of lines for the upper half (can adjust if needed)
    for(int i = 1; i <= n; i++) {
        int stars = 2*i - 1; // Odd numbers of stars
        for(int j = 1; j <= stars; j++) {
            printf("*");
        }
        printf("\n");
    }
    for(int i = n-1; i >= 1; i--) {
        int stars = 2*i - 1;
        for(int j = 1; j <= stars; j++) {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
code=54
#include <stdio.h>

int main() {
    int n = 4; // Number of lines in the upper half (including the middle line)
    
    // Upper half
    for(int i = 1; i <= n; i++) {
        // Print spaces
        for(int j = 1; j <= n - i; j++) {
            printf(" ");
        }
        // Print stars (odd numbers)
        for(int j = 1; j <= 2*i - 1; j++) {
            printf("*");
        }
        printf("\n");
    }

    // Lower half
    for(int i = n-1; i >= 1; i--) {
        // Print spaces
        for(int j = 1; j <= n - i; j++) {
            printf(" ");
        }
        // Print stars
        for(int j = 1; j <= 2*i - 1; j++) {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}

